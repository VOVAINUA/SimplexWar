<?xml version="1.0" encoding="UTF-8"?>
<project name="module_jaba_server" default="compile.module.jaba_server">
  <dirname property="module.jaba_server.basedir" file="${ant.file.module_jaba_server}"/>
  
  <property name="module.jdk.home.jaba_server" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.jaba_server" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.jaba_server" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.jaba_server" value="-encoding UTF-8 -source 10 -target 10 ${compiler.args}"/>
  
  <property name="jaba_server.output.dir" value="${module.jaba_server.basedir}/out/production/Jaba Server"/>
  <property name="jaba_server.testoutput.dir" value="${module.jaba_server.basedir}/out/test/Jaba Server"/>
  
  <path id="jaba_server.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="jaba_server.module.production.classpath">
    <path refid="${module.jdk.classpath.jaba_server}"/>
  </path>
  
  <path id="jaba_server.runtime.production.module.classpath">
    <pathelement location="${jaba_server.output.dir}"/>
  </path>
  
  <path id="jaba_server.module.classpath">
    <path refid="${module.jdk.classpath.jaba_server}"/>
    <pathelement location="${jaba_server.output.dir}"/>
  </path>
  
  <path id="jaba_server.runtime.module.classpath">
    <pathelement location="${jaba_server.testoutput.dir}"/>
    <pathelement location="${jaba_server.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.jaba_server">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.jaba_server">
    <patternset refid="excluded.from.module.jaba_server"/>
  </patternset>
  
  <path id="jaba_server.module.sourcepath">
    <dirset dir="${module.jaba_server.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.jaba_server" depends="compile.module.jaba_server.production,compile.module.jaba_server.tests" description="Compile module Jaba Server"/>
  
  <target name="compile.module.jaba_server.production" depends="register.custom.compilers" description="Compile module Jaba Server; production classes">
    <mkdir dir="${jaba_server.output.dir}"/>
    <javac2 destdir="${jaba_server.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.jaba_server}/javac">
      <compilerarg line="${compiler.args.jaba_server}"/>
      <bootclasspath refid="jaba_server.module.bootclasspath"/>
      <classpath refid="jaba_server.module.production.classpath"/>
      <src refid="jaba_server.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.jaba_server"/>
    </javac2>
    
    <copy todir="${jaba_server.output.dir}">
      <fileset dir="${module.jaba_server.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.jaba_server.tests" depends="register.custom.compilers,compile.module.jaba_server.production" description="compile module Jaba Server; test classes" unless="skip.tests"/>
  
  <target name="clean.module.jaba_server" description="cleanup module">
    <delete dir="${jaba_server.output.dir}"/>
    <delete dir="${jaba_server.testoutput.dir}"/>
  </target>
</project>